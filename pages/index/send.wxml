<!-- 领取福利弹出框 -->

<view class='mask mc_peVm' hidden='{{!pageData.showMask}}'>
  <view class='middle-mask' style='width:520rpx;height:640rpx;padding:10rpx;'>
    <view class='flex -m-right'>
      <image class='close-img' src='../../img/close.png' bindtap='Event' data-id='close' mode='aspectFit'></image>
    </view>
    <view class='mask-img'>
      <image src="{{pageData.getImg}}"></image>
    </view>
    <view class='mask-text'>
      <text>许久不见</text>
    </view>
    <view class='mask-text' style='margin-top:0;'>
      <text style='color:#66ccff;'>{{pageData.shopName}}</text>
    </view>
    <view class='mask-text' style='margin-top:0;'>
      <text>邀您一起共享美好时光！</text>
    </view>
    <view class='send-btn' style='background-color:#F6B42E;margin:0 auto;margin-top:70rpx;' bindtap='Event' data-id='web-view'>
      <text>领取福利</text>
    </view>
  </view>
</view>

