  <view class='bo-btn'>
    <view hidden='{{pageData.isShare}}'>
      <view class='flex -c-center' style='margin-bottom:25rpx;' hidden='{{pageData.hasSend}}'>
        <view class='fg1'></view>
        <button open-type='share' class='send-btn' style='background-color:#8B548D;'>
          <text>赠送给好友</text>
        </button>
        <view class='fg1'></view>
        <view class='send-btn' style='background-color:#1187AC;' bindtap='Event' data-id='saveImg' data-type="toStore">
          <text>保存成图片</text>
        </view>
        <view class='fg1'></view>
      </view>
      <view class='flex -c-center -m-around' style='margin-bottom:25rpx;' hidden='{{!pageData.hasSend}}'>
        <button open-type='share' class='send-btn' style='background-color:#E94A46;'>
          <text>继续赠送</text>
        </button>
        <view class='send-btn' style='background-color:#1187AC;' bindtap='Event' data-id='finish'>
          <text>再寄一份</text>
        </view>
      </view>
    </view>
    <view hidden='{{!pageData.isShare}}'>
      <view class='flex -c-center -m-around' style='margin-bottom:25rpx;'>
        <view class='send-btn' style='background-color:#8B548D;' bindtap='Event' data-id='toChoose'>
          <text>我也寄一张</text>
        </view>
        <view class='send-btn' style='background-color:white;color:#8B548D;' bindtap='Event' data-id='saveImg' data-type="imgUrl" data-status="{{pageData.collectStatus}}">
          <text>{{pageData.hasCollectText}}</text>
        </view>
      </view>
    </view>
  </view>
