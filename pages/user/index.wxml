<!--pages/user/index.wxml-->
<view class="page">

    <view class="page__bd">
        <view class="page__bd albu">
        <swiper indicator-dots="true" autoplay="false" interval="4000" duration="500"
         style=" width: 100%;height: 100%;">
        <block wx:for="{{imageList}}" wx:key="*this">
          <swiper-item>
            <image src="{{item}}" />
          </swiper-item>
        </block>
      </swiper>
        </view>
        <view class="user-info">
            <view class="name">{{user.Nickname}}</view>
            <view class="center">
                <view class="age">{{user.Sex==1?'♂':'♀'}} {{user.Age}}</view>
                <view class="conste">{{user.Constellation}}</view>
            </view>
        </view>
        <view class="sign">
           <view class="info__title">我的信息</view>
        </view>
        <view class="info">
            
            <view class="hyinfo">
                <view class="info_name">学校 </view>
                <view class="hyinfo__input">{{user.School}}</view>
            </view>
            <view class="hyinfo">
                <view class="info_name">专业 </view>
                <view class="hyinfo__input">{{user.Major}}</view>
            </view>
           <view class="hyinfo">
                <view class="info_name">微信 </view>
                <view class="hyinfo__input">匹配后出现</view>
            </view>
           <view class="hyinfo">
                <view class="info_name">签名 </view>
                <view class="hyinfo__input">{{user.PersonalSignature}}</view>
            </view>
           
        </view>
    </view>
</view>