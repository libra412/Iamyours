/* pages/together/index.wxss */

.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.t_title {
  margin-top: 150rpx;
  justify-content: center;
  text-align: center;
  font-size: 80rpx;
  color: #f34157;
}

.user {
  margin-top: 100rpx;
  width: 100%;
  text-align: center;
}

.user-head {
  border-radius: 50%;
  height: 220rpx;
  width: 220rpx;
  overflow: hidden;
}

.another-info {
  margin-top: 50rpx;
  width: 100%;
  text-align: center;
}

.wechat-info {
  margin: 20rpx 0;
  color: white;
}
.wechat-info text {
  padding: 8rpx;
  background-color: gray;
}

.foot_info {
  position: absolute;
  bottom: 10rpx;
  display: flex; 
  flex-wrap: wrap;  
  justify-content: center;
  font-size: 20rpx;
  color: rgba(128, 128, 128, 0.6);
}

.foot_info text {
  margin: 10rpx 0;
}
